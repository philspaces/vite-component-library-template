{
  "name": "vite-component-library-template",
  "private": false,
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/philspaces/vite-component-library-template.git"
  },
  "license": "MIT",
  "description": "A template for a UI library built with Vite, Tailwind, and Storybook.",
  "author": "philspaces",
  "type": "module",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./css": "./dist/style.css"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:storybook": "storybook build",
    "build:lib": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write --ignore-unknown"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@storybook/builder-vite": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@tailwindcss/vite": "^4.0.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^3.0.5",
    "clsx": "^2.1.1",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-storybook": "^9.1.5",
    "globals": "^16.4.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^9.1.5",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.5",
    "@storybook/addon-docs": "^9.1.5"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
